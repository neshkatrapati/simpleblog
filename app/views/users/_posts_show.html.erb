<center>

<% if notice != nil%>
  <center>
<div class='alert' style='width:40%'><%= notice %></div>
  </center>
<% end %>
<div id="blogroll" style="width: 100%">
<% @posts.each do |post| %>
  <div class="well" style='text-align: left'>
    <h2><%= link_to post.title, post %></h2>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %><br>
    Posted on <%= post.time %>
    <% user = User.find(post.user_id) %>
    By <i><%= link_to user.name,user %></i><br><br><br>
  
    <%  if post.content.length > 500 %>
            <%= raw(post.content[0..500])+"..." %>
            <%= link_to "See More", post %>
    <% else %>
        <%= raw post.content %>
    <% end %><br><br>
    Tags: <%= post.tags %>
  </div>
    
<% end %>
</div>
</center>
<br />


