<center>
<%= form_tag '/users/signin' do %>
  <table class='well table table-bordered' style='text-align: center;width:40%;margin-top: 10%'> 
    <tr><td><%= label_tag :username %></td><td>
    <%= text_field_tag :username %></td></tr>
  
    <tr><td><%= label_tag :password %></td><td>
    <%= password_field_tag :password %></td></tr>
  
  </table>
  <div class="actions">
    <%= submit_tag "Sign In" %>
  </div>
<% end %>
</center>